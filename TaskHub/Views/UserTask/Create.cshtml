@model UserTask

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <h2 class="text-primary">Create User Task</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                    <input asp-for="Title" class="form-control" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Description</span>
                    <textarea class="form-control" asp-for="Description" aria-label="With textarea"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Assigned To</span>
                    @* We accessed the ViewData using ViewBag just make sure that the name is the same on the ViewData *@
                    <select asp-for="AssignedToId" class="form-select" asp-items="ViewBag.AssignedToId"></select>
                </div>
                <span asp-validation-for="AssignedToId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

